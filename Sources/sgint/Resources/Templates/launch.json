{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // This always works, but without LLDB support
        /*
        {
            "name": "Launch",
            "type": "godot",
            "request": "launch",
            "preLaunchTask": "build-swift",
            "project": "${workspaceFolder}",
            "additional_options": "-v",
        }
        */
        // This works only with re-signed Godot.app. More info:
        // https://stackoverflow.com/questions/69914876/why-xcode-can-not-attach-to-some-programs/74618837#74618837
        {
            "name": "Launch",
            "type": "lldb",
            "request": "launch",
            "program": "/Applications/Godot.app",
            "preLaunchTask": "build-swift",
            "args": ["--path", "${workspaceFolder}"],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole"
        }
    ]
}